{
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "test": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^test"]
    },

    "common-ui-test": {
      "with": ["common-ui-components-example#dev"],
      "persistent": true,
      "cache": false
    },

    "e2e-test": {
      "dependsOn": ["common-ui-test", "^e2e-test"],
      "persistent": true,
      "cache": false
    }
  }
}
