{
    "name": "@sellify/common-ui-components",
    "type": "module",
    "version": "0.0.0",
    "private": true,
    "license": "MIT",
    "sideEffects": [
        "**/*.css"
    ],
    "files": [
        "dist"
    ],
    "exports": {
        "./types.d.ts": "./types.d.ts",
        "./styles.css": "./dist/styles.css",
        "./*": "./dist/*.js",
        "./buttons/*": "./dist/buttons/*.js",
        "./input/*": "./dist/input/*.js"
    },
    "scripts": {
        "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
        "build:components": "tsc",
        "check-types": "tsc --noEmit",
        "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
        "dev:components": "tsc --watch",
        "lint": "eslint src --max-warnings 0"
    },
    "peerDependencies": {
        "react": "19.1.0"
    },
    "dependencies": {
        "@sellify/common-icons": "workspace:*"
    },
    "devDependencies": {
        "@sellify/tailwind-config": "workspace:*",
        "@sellify/typescript-config": "workspace:*",
        "@tailwindcss/cli": "^4.1.5",
        "@types/react": "~19.1.8",
        "eslint": "^9.30.0",
        "tailwindcss": "~4.1.10",
        "typescript": "~5.8.3"
    }
}